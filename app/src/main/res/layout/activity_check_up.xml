                android:id="@+id/check_batal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_red_selector"
                android:layout_marginHorizontal="@dimen/padd_10"
                android:text="Batal"/>

