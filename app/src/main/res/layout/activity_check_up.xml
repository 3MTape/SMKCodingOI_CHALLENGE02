        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_blue_500"
            android:fontFamily="@font/oleo_bold"
            android:gravity="center"
            android:padding="5dp"
            android:text="Self Check Up"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padd_10"
            android:layout_marginTop="@dimen/padd_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_blue_400"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oleo_bold"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Pertanyaan Ke-1"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/google_sans_bold"
                    android:padding="@dimen/padd_10"
                    android:text="@string/soal_1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingHorizontal="@dimen/padd_10"
                    android:text="@string/soal_1a" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingHorizontal="@dimen/padd_10"
                    android:text="@string/soal_1b" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingHorizontal="@dimen/padd_10"
                    android:text="@string/soal_1c" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingHorizontal="@dimen/padd_10"
                    android:text="@string/soal_1d" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/google_sans_regular"
                    android:paddingHorizontal="@dimen/padd_10"
                    android:paddingBottom="@dimen/padd_10"
                    android:text="@string/soal_1e" />

                <RadioGroup
                    android:id="@+id/soal_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/soal_1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="Ya" />

                    <RadioButton
                        android:id="@+id/soal_1b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="Tidak" />
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
